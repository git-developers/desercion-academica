{% extends "BackendBundle::template.html.twig" %}

{% block stylesheets %}
    {{ parent() }}

    {#datatables#}
    <link rel="stylesheet" href="{{ asset('bundles/backend/plugins/datatables/dataTables.bootstrap.css')}}">

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {#datatables#}
    <script src="{{ asset('bundles/backend/plugins/datatables/jquery.dataTables.js')}}"></script>
    <script src="{{ asset('bundles/backend/plugins/datatables/dataTables.bootstrap.min.js')}}"></script>

    {#
    "bLengthChange": false,
    "bFilter": false,
    "bSort": true,
    "bInfo": true,
    "bAutoWidth": false,
    #}

    <script type="text/javascript">
        $(function () {

            $(document).on('click', '#eliminar-item', function() {
                $this = $(this);
                var id = $('#id-hidden').val();

                $.ajax({
                    type: 'post',
                    url: "{{ path('backend_session_delete') }}",
                    data: {
                        'id': id
                    },
                    success: function(data) {
                        var Data = $.parseJSON(data);

                        if(Data.status == 'ok') {
                            $('#delete-modal').modal('hide');
                            $('#id_increment_' + id).hide("slow", function () {
                                // Animation complete.
                            });
                        }else if(Data.status == 'access-denied') {
                            alert('Acceso denegado: no tiene permisos para eliminar');
                        }else{
                            alert('no se borro item con id: '+ id);
                        }
                    }
                });
            });

            $(document).on('click', '.eliminar-modal', function() {
                $this = $(this);
                $id = $this.data('id');
                $('#id-hidden').val($id);
                $('#id-hidden-span').html($id);
            });

            var table = $('#table-json').DataTable({
                "bPaginate": true,
                "bSort": false,
                "lengthMenu": [[50, 100, 150, -1], [50, 100, 150, "Todos"]],
                "data": {{ entitiesJson | raw }},
                "language": {
                    "emptyTable": "No hay datos disponibles en la tabla"
                },
                "columns": [
                    { "data": function (obj) {
                        return '<span class="label label-default">' + obj.id_increment + '</span>';
                        }
                    },
                    {
                        "data": function (obj) {
                            if(obj.token != null){
                                return obj.token;
                            }
                            return "";
                        }
                    },
                    {
                        "data": function (obj) {
                            if(obj.user != null){
                                return '<span class="label label-success">'+obj.user.id_increment+'</span>';
                            }
                            return "";
                        }
                    },
                    {
                        "data": function (obj) {
                            if(obj.user.name != null && obj.user.last_name != null){
                                return obj.user.name + ' ' + obj.user.last_name;
                            }
                            return "";
                        }
                    },
                    {
                        "data": function (obj) {
                            if(obj.user.email != null){
                                return obj.user.email;
                            }
                            return "";
                        }
                    },
                    {
                        "data": function (obj) {
                            if(obj.created != null){
                                return obj.created;
                            }
                            return "";
                        }
                    },
                    { "data": function (obj) {
                        return '<a href="#" data-toggle="modal" data-id="' + obj.id_increment + '" data-target="#delete-modal" class="eliminar-modal btn btn-danger btn-circle" alt="Eliminar" title="Eliminar"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>';
                        }
                    }
                ],
                "fnRowCallback": function( nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                    $(nRow).attr("id","id_increment_" + aData.id_increment);
                    return nRow;
                }
            });

        });
    </script>

{% endblock %}

{% block contenido %}

    {#id auto increment#}
    <input type="hidden" value="" id="id-hidden">


    <!-- Content Header (Page header) -->
    <section class="content-header">
