{% extends 'CoreBundle::Crud/Template/api_content.html.twig' %}

{% block api_content %}
    {% if id is defined %}
        <input type="hidden" value="{{ id }}" name="id">
    {% endif %}

    {{ form_widget(formEntity._token) }}

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(formEntity.name) }}
                {{ form_widget(formEntity.name) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                {{ form_label(formEntity.ciclo) }}
                {{ form_widget(formEntity.ciclo) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <i class="fa fa-fw fa-clock-o"></i>
                {{ form_label(formEntity.rangeStart) }}
                {{ form_widget(formEntity.rangeStart) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <i class="fa fa-fw fa-clock-o"></i>
                {{ form_label(formEntity.rangeEnd) }}
                {{ form_widget(formEntity.rangeEnd) }}
            </div>
        </div>
    </div>

{% endblock %}