{% extends "CoreBundle::template.html.twig" %}

{% block stylesheets %}
    {{ parent() }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}

{% block content %}

    <section class="content-header">
        <h1>
            <i class="fa fa-fw fa-exchange"></i> Comparar notas
            <small>chart</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>

    <section class="content">

        <div class="row">

            <div class="col-md-4">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Cursos</h3>
                    </div>
                    <div class="box-body">

                        <ul class="todo-list ui-sortable">
                            {% for key, course in courses %}
                                <li>
                                    <span class="handle ui-sortable-handle">
                                    <i class="fa fa-ellipsis-v"></i>
                                    <i class="fa fa-ellipsis-v"></i>
                                    </span>
                                    <input type="radio" name="curso" value="">
                                    <small class="label label-success">
                                        <i class="fa fa-clock-o"></i> {{ course.id_increment }}
                                    </small>
                                    <span class="text">{{ course.name }}</span>
                                    <div class="tools">
                                        <i class="fa fa-check-square-o"></i>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>

                    </div>
                    <div class="box-footer">
                        {#<button type="submit" class="btn btn-primary">Enviar</button>#}
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Alumnos</h3>
                    </div>
                    <div class="box-body">



                    </div>
                    <div class="box-footer">
                        {#<button type="submit" class="btn btn-primary">Enviar</button>#}
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Notas</h3>
                    </div>
                    <div class="box-body">



                    </div>
                    <div class="box-footer">
                        {#<button type="submit" class="btn btn-primary">Enviar</button>#}
                    </div>
                </div>
            </div>

        </div>

    </section>

{% endblock %}