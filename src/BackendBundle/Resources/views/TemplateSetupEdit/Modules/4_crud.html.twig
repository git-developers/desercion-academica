            </div>
            {#LEFT#}


            {#RIGHT#}
            <div class="col-md-3" style="padding-bottom: 50px">

                <div class="box-group" id="accordion">
                    {{ include('BackendBundle:TemplateSetupEdit:Accordion/index.html.twig') }}
                </div>

            </div>
            {#RIGHT#}

        </div>
    </section>

    {{ include('CoreBundle:Crud:Modal/create.html.twig') }}
