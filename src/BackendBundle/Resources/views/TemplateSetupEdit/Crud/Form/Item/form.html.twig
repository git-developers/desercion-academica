{% extends 'CoreBundle::Crud/Template/api_content.html.twig' %}

{% block api_content %}

    {% if id is defined %}
        <input type="hidden" value="{{ id }}" name="id">
    {% endif %}

    {{ form_widget(formEntity._token) }}

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <i class="fa fa-fw fa-sitemap"></i>
                {{ form_label(formEntity.templateECategory) }}
                {{ form_widget(formEntity.templateECategory) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group" style="display: none;">
                {{ form_label(formEntity.templateHasModule) }}
                {{ form_widget(formEntity.templateHasModule) }}
            </div>
        </div>
    </div>

    <div class="form-group">
        {{ form_label(formEntity.name) }}
        {{ form_widget(formEntity.name) }}
    </div>

    <div class="form-group">
        {{ form_label(formEntity.description) }}
        {{ form_widget(formEntity.description) }}
    </div>

    <div class="form-group">
        {{ form_label(formEntity.excerpt) }}
        {{ form_widget(formEntity.excerpt) }}
    </div>

{% endblock %}